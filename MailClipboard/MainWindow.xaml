<Window x:Class="MailClipboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailClipboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="MainWindow_OnLoaded" Closing="MainWindow_OnClosing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Target Email:"/>
        <Label Content="Source Email Username:" Grid.Row="1" />
        <Label Content="Source Email Password:" Grid.Row="2" />
        <DockPanel Grid.Row="3" LastChildFill="True">
            <Label Content="Hotkey:"/>
            <TextBox ></TextBox>
        </DockPanel>
        <Button Grid.Row="4">Save Source Email(Gmail only)</Button>
    </Grid>
</Window>
